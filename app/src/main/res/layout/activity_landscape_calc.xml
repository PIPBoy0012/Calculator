<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/fullscreenBackgroundColor"
    android:theme="@style/ThemeOverlay.Calculator.FullscreenContainer"
    tools:context=".LandscapeCalc">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:text="TextView"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:columnCount="5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="1.0"
        app:rowCount="3">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_column="0"
            app:layout_row="4">


            <Button
                android:id="@+id/comma"
                android:layout_width="43pt"
                android:layout_height="43pt"
                android:background="#000000"
                android:text=","
                android:textSize="24sp" />

            <Button
                android:id="@+id/zero"
                android:layout_width="43pt"
                android:layout_height="43pt"
                android:background="#000000"
                android:onClick="numberAction"
                android:text="0"
                android:textSize="24sp" />

            <Button
                android:id="@+id/equal"
                android:layout_width="43pt"
                android:layout_height="43pt"
                android:background="#000000"
                android:onClick="equalsAction"
                android:text="="
                android:textSize="24sp" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_column="0"
            app:layout_row="3">

            <Button
                android:id="@+id/one"
                android:layout_width="43pt"
                android:layout_height="43pt"
                android:background="#000000"
                android:onClick="numberAction"
                android:text="1"
                android:textSize="24sp" />

            <Button
                android:id="@+id/two"
                android:layout_width="43pt"
                android:layout_height="43pt"
                android:background="#000000"
                android:onClick="numberAction"
                android:text="2"
                android:textSize="24sp" />

            <Button
                android:id="@+id/three"
                android:layout_width="43pt"
                android:layout_height="43pt"
                android:background="#000000"
                android:onClick="numberAction"
                android:text="3"
                android:textSize="24sp" />

            <Button
                android:id="@+id/add"
                android:layout_width="43pt"
                android:layout_height="43pt"
                android:background="#000000"
                android:onClick="operationAction"
                android:text="+"
                android:textSize="24sp" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_column="0"
            app:layout_row="2">

            <Button
                android:id="@+id/four"
                android:layout_width="43pt"
                android:layout_height="43pt"
                android:background="#000000"
                android:onClick="numberAction"
                android:text="4"
                android:textSize="24sp" />

            <Button
                android:id="@+id/five"
                android:layout_width="43pt"
                android:layout_height="43pt"
                android:background="#000000"
                android:onClick="numberAction"
                android:text="5"
                android:textSize="24sp" />

            <Button
                android:id="@+id/six"
                android:layout_width="43pt"
                android:layout_height="43pt"
                android:background="#000000"
                android:onClick="numberAction"
                android:text="6"
                android:textSize="24sp" />

            <Button
                android:id="@+id/subtract"
                android:layout_width="43pt"
                android:layout_height="43pt"
                android:background="#000000"
                android:onClick="operationAction"
                android:text="-"
                android:textSize="24sp" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_column="0"
            app:layout_row="1">

            <Button
                android:id="@+id/seven"
                android:layout_width="43pt"
                android:layout_height="43pt"
                android:background="#000000"
                android:onClick="numberAction"
                android:text="7"
                android:textSize="24sp" />

            <Button
                android:id="@+id/eight"
                android:layout_width="43pt"
                android:layout_height="43pt"
                android:background="#000000"
                android:onClick="numberAction"
                android:text="8"
                android:textSize="24sp" />

            <Button
                android:id="@+id/nine"
                android:layout_width="43pt"
                android:layout_height="43pt"
                android:background="#000000"
                android:onClick="numberAction"
                android:text="9"
                android:textSize="24sp" />

            <Button
                android:id="@+id/multiplie"
                android:layout_width="43pt"
                android:layout_height="43pt"
                android:background="#000000"
                android:onClick="operationAction"
                android:text="x"
                android:textSize="24sp" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_column="0"
            app:layout_row="0">

            <Button
                android:id="@+id/ac"
                android:layout_width="43pt"
                android:layout_height="43pt"
                android:background="#000000"
                android:onClick="allClearAction"
                android:text="AC"
                android:textSize="24sp" />

            <Button
                android:id="@+id/backspace"
                android:layout_width="43pt"
                android:layout_height="43pt"
                android:background="#000000"
                android:onClick="backSpaceAction"
                android:text="\u232b"
                android:textSize="24sp" />

            <Button
                android:id="@+id/procent"
                android:layout_width="43pt"
                android:layout_height="43pt"
                android:background="#000000"
                android:onClick="operationAction"
                android:text="%"
                android:textSize="24sp" />

            <Button
                android:id="@+id/divid"
                android:layout_width="43pt"
                android:layout_height="43pt"
                android:background="#000000"
                android:onClick="operationAction"
                android:text="/"
                android:textSize="24sp" />
        </TableRow>
    </androidx.gridlayout.widget.GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>